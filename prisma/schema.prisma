generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  username    String  @unique
  displayName String
  description String?

  xcomUrl      String?
  telegramUrl  String?
  websiteUrl   String?
  instagramUrl String?

  avatarUrl String?

  createdAt DateTime  @default(now()) @db.Timestamptz
  deletedAt DateTime? @db.Timestamptz(3)

  walletUuid    String          @unique @db.Uuid
  wallet        Wallet          @relation(fields: [walletUuid], references: [uuid])
  walletProdile WalletProfile[]
}

model Wallet {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  address   String @unique
  publicKey String @unique

  profile            Profile?
  walletRefreshToken WalletRefreshToken[]
  walletProdile      WalletProfile[]
}

model WalletProfile {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  walletUuid String @db.Uuid
  wallet     Wallet @relation(fields: [walletUuid], references: [uuid])

  profileUuid String  @db.Uuid
  profile     Profile @relation(fields: [profileUuid], references: [uuid])

  visibility Boolean

  createdAt DateTime @default(now()) @db.Timestamptz(3)

  @@unique([walletUuid, profileUuid])
}

model WalletRefreshToken {
  token String @id @default(uuid())

  wallet     Wallet @relation(fields: [walletUuid], references: [uuid])
  walletUuid String @db.Uuid

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  expDate   DateTime @db.Timestamptz(3)
}
