generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  username    String  @unique
  displayName String
  description String?

  xcomUrl      String?
  telegramUrl  String?
  websiteUrl   String?
  instagramUrl String?

  avatarUrl String?

  createdAt DateTime  @default(now()) @db.Timestamptz
  deletedAt DateTime? @db.Timestamptz

  walletUuid    String          @unique @db.Uuid
  wallet        Wallet          @relation(fields: [walletUuid], references: [uuid])
  walletProfile WalletProfile[]

  message Message[]

  profileChat ProfileChat[]
  attachment  Attachment[]
}

model Wallet {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  address   String @unique
  publicKey String @unique

  profile            Profile?
  walletRefreshToken WalletRefreshToken[]
  walletProfile      WalletProfile[]
}

model WalletProfile {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  walletUuid String @db.Uuid
  wallet     Wallet @relation(fields: [walletUuid], references: [uuid])

  profileUuid String  @db.Uuid
  profile     Profile @relation(fields: [profileUuid], references: [uuid])

  visibility Boolean

  createdAt DateTime @default(now()) @db.Timestamptz

  @@unique([walletUuid, profileUuid])
}

model WalletRefreshToken {
  token String @id @default(uuid())

  walletUuid String @db.Uuid
  wallet     Wallet @relation(fields: [walletUuid], references: [uuid])

  createdAt DateTime @default(now()) @db.Timestamptz
  expDate   DateTime @db.Timestamptz
}

model Chat {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  createdAt DateTime @default(now()) @db.Timestamptz

  attachment Attachment[]
  message    Message[]

  profileChat ProfileChat[]
}

model ProfileChat {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  profile     Profile @relation(fields: [profileUuid], references: [uuid])
  profileUuid String  @db.Uuid
  chat        Chat    @relation(fields: [chatUuid], references: [uuid])
  chatUuid    String  @db.Uuid

  @@unique([profileUuid, chatUuid])
}

model Attachment {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  chatUuid String @db.Uuid
  chat     Chat   @relation(fields: [chatUuid], references: [uuid])

  creatorProfileUuid String  @db.Uuid
  creatorProfile     Profile @relation(fields: [creatorProfileUuid], references: [uuid])

  fileUrl String

  createdAt DateTime @default(now()) @db.Timestamptz
}

enum MessageStatus {
  delivered
  readed
}

model Message {
  uuid String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  text String

  chatUuid String @db.Uuid
  chat     Chat   @relation(fields: [chatUuid], references: [uuid])

  creatorProfileUuid String  @db.Uuid
  creatorProfile     Profile @relation(fields: [creatorProfileUuid], references: [uuid])

  status MessageStatus @default(delivered)

  createdAt DateTime @default(now()) @db.Timestamptz
}
